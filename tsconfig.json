{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "es6" ],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "typeRoots":["./typings"],
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "src/views/htmlcontent"
    ]
}